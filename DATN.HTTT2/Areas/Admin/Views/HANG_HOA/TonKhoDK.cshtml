@model IEnumerable<DATN.HTTT2.Areas.Admin.Models.TonKhoDK>

@{
    ViewBag.Title = "Tồn kho dự kiến";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<style>
</style>

<head>
    <!-- Custom styles for this page -->
    <link href="~/Du_Lieu/vendor/datatables/dataTables.bootstrap4.min.css" rel="stylesheet">
</head>


<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h4 class="m-0 font-weight-bold text-primary" style="float:left">Tồn kho dự kiến</h4>
        <div style="float:right">
            @using (Html.BeginForm("CNTKDK", "HANG_HOA", FormMethod.Post))
            {
            <button type="submit" class="btn btn-primary">Cập nhật tồn kho dự kiến</button>
            }
        </div>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.tenhh)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.soluong)
                        </th>
                        <th>
                            Tồn kho kế hoạch
                        </th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.tenhh)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.soluong)
                        </th>
                        <th>
                            Tồn kho kế hoạch
                        </th>
                    </tr>
                </tfoot>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.tenhh)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.soluong)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.tonkhodk)
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

