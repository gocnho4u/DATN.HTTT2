@model DATN.HTTT2.Areas.Admin.Models.HANG_HOA

@{
    ViewBag.Title = "Chi tiết hàng hóa";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<style>
    /*input {
        text-align: center;
    }*/

    #drop, #drop1 {
        width: 10rem;
    }

    #b, #c {
        visibility: hidden;
    }
</style>



@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h4 class="m-0 font-weight-bold text-primary" style="float:left">Thông tin hàng hóa</h4>
        <div style="float:right">
            <button id="b" type="submit" onclick="return confirm('Bạn có chắc chắn muốn lưu không?');" class="btn btn-success">Lưu</button>
            <button id="c" type="reset" class="btn btn-danger">Hủy</button>
            @Html.ActionLink("Quay lại danh sách hàng hóa", "Index", null, new { @class = "btn btn-secondary" })
            <button id="a" type="button" class="btn btn-primary">Chỉnh sửa</button>
        </div>
    </div>
    <br />
    <div class="card-body">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.MaHH)

        <div class="form-group">
            @Html.LabelFor(model => model.TenHangHoa, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.TenHangHoa, new { htmlAttributes = new { @class = "form-control", @disabled = "disabled", @id = "aa" } })
                @Html.ValidationMessageFor(model => model.TenHangHoa, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.DonViTinh, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.DonViTinh, new { htmlAttributes = new { @class = "form-control", @disabled = "disabled", @id = "bb" } })
                @Html.ValidationMessageFor(model => model.DonViTinh, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.DonGia, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.DonGia, new { htmlAttributes = new { @class = "form-control", @disabled = "disabled", @id = "cc" } })
                @Html.ValidationMessageFor(model => model.DonGia, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <p class="control-label col">Mã loại</p>
            <div class="col-md-10">
                @Html.DropDownList("MaLoai", null, htmlAttributes: new { @class = "form-control", @id = "drop", @disabled = "disabled" })
                @Html.ValidationMessageFor(model => model.MaLoai, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <p class="control-label col">Mã nhà cung cấp</p>
            <div class="col-md-10">
                @Html.DropDownList("MaNCC", null, htmlAttributes: new { @class = "form-control", @id = "drop1", @disabled = "disabled" })
                @Html.ValidationMessageFor(model => model.MaNCC, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.TonKhoDuKien, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.TonKhoDuKien, new { htmlAttributes = new { @class = "form-control", @readonly="readonly"} })
                @Html.ValidationMessageFor(model => model.TonKhoDuKien, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.DinhMucTK, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.DinhMucTK, new { htmlAttributes = new { @class = "form-control", @disabled = "disabled", @id = "dd" } })
                @Html.ValidationMessageFor(model => model.DinhMucTK, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>
    </div>
    }

    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
        <script>
            var edit = document.getElementById("a");
            var save = document.getElementById("b");
            var cancle = document.getElementById("c");



            edit.onclick = function () {
                save.style.visibility = "visible";
                cancle.style.visibility = "visible";
                //edit.style.visibility = "hidden";
                document.getElementById("aa").disabled = false;
                document.getElementById("bb").disabled = false;
                document.getElementById("cc").disabled = false;
                document.getElementById("dd").disabled = false;
                document.getElementById("drop").disabled = false;
                document.getElementById("drop1").disabled = false;
            }
            cancle.onclick = function () {
                save.style.visibility = "hidden";
                cancle.style.visibility = "hidden";
                //edit.style.visibility = "visible";
                document.getElementById("aa").disabled = true;
                document.getElementById("bb").disabled = true;
                document.getElementById("cc").disabled = true;
                document.getElementById("dd").disabled = true;
                document.getElementById("drop").disabled = true;
                document.getElementById("drop1").disabled = true;
            }
        </script>
    }
